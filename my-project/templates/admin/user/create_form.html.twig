{% extends 'adminbase.html.twig' %}
{% block title %}Üye Ekleme{% endblock %}
{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height"> <h3><i class="fa fa-angle-right"></i> ÜYE EKLEME</h3>
                    <div class="form-panel">
                        <div class="form">
                            <form class="cmxform form-horizontal style-form" id="signupForm" method="post" action="">
                                <div class="form-group ">
                                    <label for="firstname" class="control-label col-lg-1">Ad Soyad</label>
                                    <div class="col-lg-11">
                                        <input class=" form-control" id="firstname" name="user[name]" type="text"placeholder="Ad ve Soyad">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="password" class="control-label col-lg-1">Şifre</label>
                                    <div class="col-lg-11">
                                        <input class="form-control " id="password" name="user[password]" type="password"placeholder="Şifre">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="email" class="control-label col-lg-1">Email</label>
                                    <div class="col-lg-11">
                                        <input class="form-control " id="email" name="user[email]" type="email"placeholder="email">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="email" class="control-label col-lg-1">Türü</label>
                                    <div class="col-lg-5">
                                        <select name="user[roles]" class="form-control" >
                                            <option>ROLE_ADMIN</option>
                                            <option>ROLE_USER</option>
                                            <option>ROLE_POWER</option>
                                            <option>ROLE_MEMBER</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="email" class="control-label col-lg-1">Durum</label>
                                    <div class="col-lg-5">
                                        <select name="user[status]" class="form-control">
                                            <option>true</option>
                                            <option>false </option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-1 col-lg-10">
                                        <button class="btn btn-theme" type="submit">KAYDET</button>
                                        <button class="btn btn-theme04"  type="button">İPTAL</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
        </section>
        <!- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}