{% extends 'adminbase.html.twig' %}
{% block title %}Siparişlerim{% endblock %}
{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Siparişlerim </h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="col-md-12">
                        <div class="content-panel">

                            <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th> Müsteri no:</th>
                        <th>Tutar</th>
                        <th>İsim</th>
                        <th>Adres</th>
                        <th>Şehir</th>
                        <th>Telefon</th>
                        <th>Kargo Bilgisi</th>
                        <th>Not</th>
                        <th>Durum</th>
                        <th>Göster</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr >

                            <td>{{ order.id }}</td>
                            <td>{{ order.userid }}</td>
                            <td>{{ order.amount }} ₺</td>
                            <td>{{ order.name }}</td>
                            <td>{{ order.address }}</td>
                            <td>{{ order.city }}</td>
                            <td>{{ order.phone }}</td>
                            <td>{{ order.shipinfo }}</td>
                            <td>{{ order.note }}</td>
                            <td>{{ order.status }}</td>
                            <td>
                                <a href="javascript:openWin('{{ path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=0,scrollBars=no,resizable=no,width=1000,height=800');">
                                 Göster</a>
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td colspan="11" style="color: darkorange">Kayıt Bulunamadı</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /wrapper -->
</section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}

