{% extends 'adminbase.html.twig' %}
{% block title %} Ürün Listesi{% endblock %}
{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right" style="color: darkorange"></i> <strong style="color: darkorange"> Mesaj Listesi </strong> </h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="col-mg-12">
                        <div class="content-panel">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Comment</th>
                                    <th>Status</th>
                                    <th>Göster</th>
                                    <th>Sil</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for message in messages %}
                                    <tr>
                                        <td>{{ message.id }}</td>
                                        <td>{{ message.name }}</td>
                                        <td>{{ message.email }}</td>
                                        <td>{{ message.subject }}</td>
                                        <td>{{ message.message }}</td>
                                        <td>{{ message.comment }}</td>
                                        <td>{{ message.status }}</td>
                                        <td><a href="{{ path('admin_messages_show', {'id': message.id}) }}" class="btn btn-theme"> GÖSTER</a></td>
                                        <td>  {{ include('admin/messages/_delete_form.html.twig') }} </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('admin_messages_new') }}">Create new</a>

                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}