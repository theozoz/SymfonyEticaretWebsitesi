{% extends 'adminbase.html.twig' %}
{% block title %}Kategori Detayı{% endblock %}
{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Ürün Detayı </h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="col-md-12">
                        <div class="content-panel">

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ message.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ message.name }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ message.email }}</td>
                                </tr>
                                <tr>
                                    <th>Subject</th>
                                    <td>{{ message.subject }}</td>
                                </tr>
                                <tr>
                                    <th>Message</th>
                                    <td>{{ message.message }}</td>
                                </tr>
                                <tr>
                                    <th>Comment</th>
                                    <td>{{ message.comment }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ message.status }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <form action="{{ path('admin_messages_update',{'id': message.id}) }}" method="post">

                                <textarea name="comment" cols="70" rows="5">{{ message.comment }}</textarea>
                                <input type="submit" class="btn btn-success" value="Güncelle">

                            </form>

                            <a href="{{ path('admin_messages_index') }}"><strong style="color: darkorange"> Mesajlara Dön</strong></a>
                            <p><strong style="color: deepskyblue">---------------------</strong></p>
                            {{ include('admin/messages/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}