{% extends 'adminbase.html.twig' %}
{% block title %} Ürün Listesi{% endblock %}
{% block content %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Ürün Listesi </h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="col-mg-12">
                        <div class="content-panel">
                            <h4><small  class="btn btn-success">
                                    <a href="{{ path('admin_setting_new') }}" style="color: white">
                                        <i class="fa fa-plus"></i>
                                        YENİ ÜRÜN EKLE</a> </small></h4>
                            <hr>
                            <table class="table table-bordered">

                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Keywords</th>
                                    <th>Company</th>
                                    <th>Address</th>
                                    <th>Fax</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Aboutus</th>

                                    <th>Status</th>
                                    <th>Düzenle</th>
                                    <th>Göster</th>
                                    <th>Sil</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for setting in settings %}
                                    <tr>
                                        <td>{{ setting.id }}</td>
                                        <td>{{ setting.title }}</td>
                                        <td>{{ setting.description }}</td>
                                        <td>{{ setting.keywords }}</td>
                                        <td>{{ setting.company }}</td>
                                        <td>{{ setting.address }}</td>
                                        <td>{{ setting.fax }}</td>
                                        <td>{{ setting.phone }}</td>
                                        <td>{{ setting.email }}</td>
                                        <td>{{ setting.aboutus }}</td>
                                        <td>{{ setting.status }}</td>
                                        <td><a href="{{ path('admin_setting_edit', {'id': setting.id,}) }}" class="btn btn-theme">DÜZENLE</a></td>
                                        <td><a href="{{ path('admin_setting_show', {'id': setting.id,}) }}" class="btn btn-success"> GÖSTER</a></td>
                                        <td>  {{ include('admin/setting/_delete_form.html.twig') }} </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="18">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}