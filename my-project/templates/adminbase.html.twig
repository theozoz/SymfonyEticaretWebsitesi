<body>
<section id="container">
    <!-- **********************************************************************************************************************************************************
        TOP BAR CONTENT & NOTIFICATIONS
        *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="{{ url('admin') }}" class="logo"><b>ANA<span>SAYFA</span></b></a>
        <!--logo end-->

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li> <a class="logout" href="{{ path('app_logout') }}">{{ app.user.name }}: Çıkış</a></li>

            </ul>
        </div>
        {% endif %}
    </header>
    <!--header end-->
    <!-- **********************************************************************************************************************************************************
        MAIN SIDEBAR MENU
        *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">
                <li class="mt">
                    <a href="{{ url('admin') }}">
                        <i class="fa fa-dashboard"></i>
                        <span>Anasayfa</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="javascript:">
                        <i class="fa fa-shopping-cart"></i><span>Siparişler</span>
                    </a>
                    <ul class="sub">
                        <li><a href="{{ path('admin_orders_index',{'slug': 'new'}) }}">Yeni Siparişler</a></li>
                        <li><a href="{{ path('admin_orders_index',{'slug': 'accepted'}) }}">Onaylanan Siparişler</a></li>
                        <li><a href="{{ path('admin_orders_index',{'slug': 'inshipping'}) }}">Kargodakiler</a></li>
                        <li><a href="{{ path('admin_orders_index',{'slug': 'canceled'}) }}">İptal Edilenler</a></li>
                        <li><a href="{{ path('admin_orders_index',{'slug': 'completed'}) }}">Tamamlananlar Siparişler</a></li>
                    </ul>
                </li>
                <li><a href="{{ path('admin_product_index') }}"><i class="fa fa-inbox" style="color: green"></i><span>Ürünler</span></a></li>
                <li><a href="{{ path('admin_category_index') }}"><i class="fa fa-sitemap"></i><span>Kategoriler</span></a></li>
                <li><a href="{{ path('admin_user') }}"><i class="fa fa-group"></i><span>Üyeler</span></a></li>
                <li><a href="{{ path('admin_messages_index') }}"><i class="fa fa-envelope"></i><span>Mesajlar</span></a></li>
                <li class="header-middle">LABELS</li>
                <li><a href="{{ path('admin_setting_index') }}"><i class="fa fa-circle-o " style="color: red"></i><span>Ayarlar</span></a></li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *******CONTECT*************************************************************************************************************************************************** -->
    <!--main content start-->
    {% block content %} {%endblock%}
    <!-- /MAIN CONTENT -->
    <!--main content end-->
    <!--footer start-->
    <footer class="site-footer">
        <div class="text-center">
            <p>

            </p>
            <div class="credits">

            </div>
            <a href="blank.html#" class="go-top">
                <i class="fa fa-angle-up"></i>
            </a>
        </div>
    </footer>
    <!--footer end-->
</section>
